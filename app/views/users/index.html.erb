<h1>Listing users</h1>

<table>
  <tr>
    <th>User name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.user_name %></td>
    <% if user.user_name != 'admin' && user != current_user %>
    <td><%= link_to 'delete', user, method: :delete, confirm: "Are you sure you want to delete this user?" %></td>
    <% end %>
  </tr>
  
<% end %>
</table>

