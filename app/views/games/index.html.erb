<%= form_tag games_path, :method => 'get' do %>
	<%= render 'tags/game/barcode' %>
	<%= render 'tags/game/title' %>
    <%= render 'tags/game/sections' %>
    <%= render 'tags/buttons/search' %>
<% end %>

<% if @games.count > 0 %>
    <table id='games' style='border-spacing:0;width:100%;'>
        <% @games.each_with_index do |game, index| %>
        	<tr <%= index.even? ? 'style=background-color:#2E2E2E;' : nil %> <%= "id=game-#{game.barcode}" %>>
                <td><%= bool_img(game.checked_in) %></td>
                <td data-id="<%= game.id %>" data-barcode="<%= game.barcode %>"><%= game.barcode %></td>
                <td data-id="<%= game.id %>" data-title="<%= game.title.title %>"><%= game.title.title %></td>
                <td data-id="<%= game.id %>" data-publisher="<%= game.title.publisher.name %>"><%= game.title.publisher.name %></td>
                <td data-id="<%= game.id %>" data-section="<%= game.section.id %>"><%= select_tag nil, options_for_select(@sections, :selected => [game.section.name, game.section.id]) %></td>
                <td style="width:10px;">
                	<%= image_tag("tiny_check.png", alt: "success", class: 'invis', id:"#{game.id}-tinycheck") %>
                	<%= image_tag("tiny_x.png", alt: "failed", class: 'invis', id:"#{game.id}-tinyx") %></td>
            </tr>
        <% end %>
    </table>
    <div style='float:right;'>
    	<%= will_paginate @games %>
    </div>
<% end %>
