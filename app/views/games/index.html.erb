<h2>Games</h2>

<%= form_tag games_path, :method=>'get' do %>
    <div class="field">
    	<%= render 'tags/game/barcode' %>
    	<%= render 'tags/game/title' %>
        <%= render 'tags/game/sections' %>
        <%= render 'tags/buttons/search' %>
    </div>
<% end %>

<% if @games.count > 0 %>

	<%= will_paginate @games %>
    <table style='width:100%;'>
        <tr>
            <th>Checked In</th>
            <th>Barcode</th>
            <th>Title</th>
            <th>Publisher</th>
            <th>Section</th>
            <th>Loaner</th>
        </tr>
        
        <% @games.each do |game| %>
            <tr>
                <td style='text-align:center;'><%= bool_img game.checked_in %></td>
                <td style='text-align:center;'><%= link_to game.barcode, game %></td>
                <td><%= game.title.title %></td>
                <td><%= game.title.publisher.name %></td>
                <td style='text-align:center;'><%= game.section.name %></td>
                <td><%= game.loaner ? game.loaner.name : nil %></td>
            </tr>
        <% end %>
        
    </table>
    <%= will_paginate @games %>
    
<% end %>