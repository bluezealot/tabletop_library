<h2>Games</h2>
<span>
<%= form_tag games_path, :method=>'get' do %>
    <div class="field" style='width:240px; margin:auto 0 auto auto; float:left;' >
    	<%= render 'tags/game/barcode' %>
    	<%= render 'tags/game/title' %>
        <%= render 'tags/game/sections' %>
        <%= render 'tags/buttons/search' %>
    </div>
<% end %>
</span>
<span>
<% if @games.count > 0 %>
    <table style='border-spacing:0;width:720px;margin:auto auto auto 0;'>
        <tr>
            <th>Chkd In</th>
            <th>Barcode</th>
            <th>Title</th>
            <th>Publisher</th>
            <th>Section</th>
            <th>Loan</th>
        </tr>
        <% ctr = 1 %>
        <% @games.each do |game| %>
        	<% if ctr == 0 %>
            	<tr style='background-color: #2E2E2E;'>
            	<% ctr = 1 %>
            <% else %>
            	<tr>
            	<% ctr = 0 %>
           	<% end %>
	                <td style='text-align:center;width:30px;'><%= bool_img game.checked_in %></td>
	                <td style='text-align:center;width:100px;'><%= game.barcode %></td>
	                <td style='width:220px;'><%= game.title.title %></td>
	                <td style='width:130px;'><%= game.title.publisher.name %></td>
	                <td style='text-align:center;width:80px;'><%= game.section.name %></td>
	                <td style='text-align:center;width:30px;'><%= game.loaner ? bool_img(game.loaner.name) : nil %></td>
	            </tr>
        <% end %>
    </table>
    <div style='float:right;'>
    	<%= will_paginate @games %>
    </div>
<% end %>
</span>
