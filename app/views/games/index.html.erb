<h1>Listing games</h1>

<%= form_tag games_path, :method=>'get' do %>
    <div class="field">
        <%= label_tag :section %><br />
        <%= select_tag :section_id, options_for_select(@sections, :selected => select_option_for), :prompt=>'Select a Department'%>
    </div>
    <%= submit_tag "search" %>
<% end %>

<table style='width:100%;'>
  <tr>
    <th>Checked In</th>
    <th>Barcode</th>
    <th>Title</th>
    <th>Publisher</th>
    <th>Section</th>
    <th>Loaner</th>
  </tr>
<% @games.each do |game| %>
  <tr>
    <td style='text-align:center;'><%= bool_img game.checked_in %></td>
    <td style='text-align:center;'><%= link_to game.barcode, game %></td>
    <td><%= game.title.title %></td>
    <td><%= game.title.publisher.name %></td>
    <td style='text-align:center;'><%= game.section.name %></td>
    <td><%= game.loaner ? game.loaner.name : nil %></td>
  </tr>
<% end %>
</table>