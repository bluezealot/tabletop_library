<h1>New game</h1>

<p id="notice"><%= notice %></p>

<%= form_tag games_info_path do %>
    <div class="field">
        <%= label_tag :title %><br />
        <%= text_field_tag :title, params[:title] %>
    </div>
    
    <div class="field">
        <%= label_tag :publisher %><br />
        <%= text_field_tag :publisher, params[:publisher] %>
    </div>
    
    <div class="field">
        <%= label_tag :loaner %><br />
        <%= text_field_tag :loaner, params[:loaner] %>
    </div>
    
    <div class="field">
        <%= label_tag :section %><br />
        <%= select_tag :section_id, options_for_select(@sections, :selected => select_option_for)%>
    </div>
    
    <div class="actions">
    <%= submit_tag "games - next step" %>
    </div>
<% end %>

<%= link_to 'Back', games_path %>
