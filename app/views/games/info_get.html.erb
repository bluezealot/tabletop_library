<h2>New Game</h2>
<h3>Enter game info below to continue.</h3>

<%= form_tag games_info_path do %>
    <div class="field">
        <%= render 'tags/game/title' %>
        <%= render 'tags/game/publisher' %>
        <%= render 'tags/game/sections' %>
    </div>
    <%= render 'tags/buttons/next_step' %>
<% end %>

<% if !session[:l_id].nil? %>
    <p class='loaner-notice'>Adding game for <%= Loaner.find(session[:l_id]).name %>.</p>
    <p><%= link_to 'back to Loaners', loaners_path %>
<% else %>
    <%= link_to 'All Games', games_path %>
<% end %>
