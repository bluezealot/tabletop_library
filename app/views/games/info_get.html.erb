<h2>New Game</h2>
<h3>Enter game info below to continue.</h3>

<%= form_tag games_info_path do %>
    <div class="field">
        <%= label_tag :title %><br />
        <%= text_field_tag :title, params[:title] %>
    </div>
    
    <div class="field">
        <%= label_tag :publisher %><br />
        <%= text_field_tag :publisher, params[:publisher] %>
    </div>
    
    <div class="field">
        <%= select_tag :section_id, options_for_select(@sections, :selected => select_option_for)%>
    </div>
    
    <div class="actions">
    <%= submit_tag "new game - next step" %>
    </div>
<% end %>

<% if !session[:l_id].nil? %>
    <p class='loaner-notice'>Adding game for <%= Loaner.find(session[:l_id]).name %>.</p>
    <p><%= link_to 'back to Loaners', loaners_path %>
<% else %>
    <%= link_to 'All Games', games_path %>
<% end %>
