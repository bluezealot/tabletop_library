<h1>Listing paxes</h1>

<table style='width:100%;'>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Start</th>
    <th>End</th>
    <th>Current</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @paxes.each do |pax| %>
  <tr>
    <td><%= pax.name %></td>
    <td><%= pax.location %></td>
    <td style='text-align:center;'><%= pax.start %></td>
    <td style='text-align:center;'><%= pax.end %></td>
    <td style='text-align:center;'><%= bool_img pax.current %></td>
    <td><%= link_to 'Set Current', pax, method: :delete %></td>
    <td><%= link_to 'Edit', edit_paxis_path(pax) %></td>
    <td><%= link_to 'Show Metrics', metrics_path(:id => pax) %></td>
  </tr>
<% end %>
</table>

