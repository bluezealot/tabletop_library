<h1>Listing paxes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Start</th>
    <th>End</th>
    <th>Current</th>
    <th></th>
    <th></th>
  </tr>

<% @paxes.each do |pax| %>
  <tr>
    <td><%= pax.name %></td>
    <td><%= pax.location %></td>
    <td><%= pax.start %></td>
    <td><%= pax.end %></td>
    <td><%= pax.current %></td>
    <td><%= link_to 'Set Current', pax, method: :delete %></td>
    <td><%= link_to 'Edit', edit_paxis_path(pax) %></td>
  </tr>
<% end %>
</table>

