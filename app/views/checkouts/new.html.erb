<div id='checkout_form' class='center-form'>
	<%= text_field_tag :co_a_id, nil, { autocomplete: "off", placeholder: 'Attendee Barcode', autoFocus: true, data: { title: 'Enter an ATTENDEE barcode to look up status.' } } %>
	<%= button_tag 'x', { id: 'x_atte', class: 'invis btn btn-default' } %>
	<div id='a_label'></div>
	
	<input checked id="swap_chkbox" name="swap_chkbox" type="checkbox" data-wrapper-class="switch-small" data-on-text="Swap Games" data-off-text="Checkout Additional">

	<%= text_field_tag :co_g_id, nil, { autocomplete: "off", placeholder: 'Game Barcode', class: 'invis', data: { title: 'Enter a GAME barcode to check out the game to the above attendee.' } } %>
	<div id='g_label'></div>
	</div>

<div id='new_attendee' title='New Attendee'>
	<%= text_field_tag :first_name, nil, { autocomplete: "off", placeholder: 'First Name', autofocus: true } %>
	<%= text_field_tag :last_name, nil, { autocomplete: "off", placeholder: 'Last Name'} %>
	<%= text_field_tag :handle, nil, { autocomplete: "off", placeholder: 'Handle'} %>
	</div>
	
