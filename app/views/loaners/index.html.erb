<h1>Listing loaners</h1>

<table style='width:100%;'>
  <tr>
    <th>Name</th>
    <th>Contact</th>
    <th>Phone number</th>
    <th>Games</th>
    <th></th>
    <th></th>
  </tr>

<% @loaners.each do |loaner| %>
  <tr>
    <td><%= loaner.name %></td>
    <td><%= loaner.contact %></td>
    <td style='text-align:center;'><%= loaner.phone_number %></td>
    <td style='text-align:center;'><%= loaner.games.count %></td>
    <td><%= link_to 'Edit', edit_loaner_path(loaner) %></td>
    <td><%= link_to 'Add Game', loaners_add_game_path({:id => loaner.id}) %></td>
    <% if loaner.games.count > 0 %>
    	<td><%= link_to 'Return All Games', loaner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

